<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_company_form_add_fields" model="ir.ui.view">
            <field name="name">res.company.form.add.fields</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="signature_image" widget="image" class="oe_avatar float-left"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
