<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- List View -->
    <record id="ncr_reason_tree_view" model="ir.ui.view">
      <field name="name">ncr.reason.tree.view</field>
      <field name="type">tree</field>
      <field name="model">ncr.reason</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
        </tree>
      </field>
    </record>

    <!-- Form View -->
    <record id="ncr_reason_form_view" model="ir.ui.view">
      <field name="name">ncr.reason.form.view</field>
      <field name="type">form</field>
      <field name="model">ncr.reason</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <group>
                <field name="name"/>
              </group>
              <group>
                
              </group>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- Search -->
    <record id="ncr_reason_search" model="ir.ui.view">
        <field name="name">ncr.reason.search</field>
        <field name="model">ncr.reason</field>
        <field name="type">search</field>
        <field name="arch" type="xml">
            <search>

            </search>
        </field>
    </record>

</odoo>
